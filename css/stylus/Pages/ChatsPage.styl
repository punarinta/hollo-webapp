chats-page
  width 100vw
  height 100vh
  background-color color-bg-grey
  display flex
  flex-direction column
  position fixed
  @media screen and (min-width break-tablet)
    width 360px
    background-color #fff
  .gear
    position fixed
    right 10px
    top 24px
    z-index 2
    width 48px
    @media screen and (min-width break-tablet)
      left 306px
      top 72px
    svg
      min-height 24px
  .gear.focused
    display none
  search-bar
    margin-left 12px
    margin-right 12px
    margin-top 8px
    z-index 1
    input
      background-image url('gfx/color/search2.svg')
    @media screen and (min-width break-tablet)
      margin-top 56px
      box-shadow none
      background-color #fff
      &.focused
        margin-top 0
  ul
    padding 0
    margin 0
    list-style-type none
    overflow-x hidden
    overflow-scrolling touch
    &.travel
      transition all .4s ease-in
    @media screen and (min-width break-tablet)
      .selected
        .real
          background-color darken(#fff, 4%)

  loader
    width 48px
    height 48px
    z-index 1
    position fixed
    opacity 0
    left 50%
    margin-left @width*(-0.5)
    background-color #ffffff
    border-radius 999px
    display none
    inner-loader
      display block
      width 48px
      height 48px
      background url('gfx/color/loading.svg') no-repeat center center
      background-size 40px
    &.travel
      transition all .4s ease-in
      inner-loader
        transition all .4s ease-in


  .list-hint
    @media screen and (min-width break-tablet)
      color #fff
