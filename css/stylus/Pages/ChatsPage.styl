chats-page
  width 100vw
  height 100vh
  background-color color-bg-grey
  display flex
  flex-direction column
  position fixed
  padding-top 8px
  search-bar
    background-color color-bg-grey
    z-index 1
    &.focused
      margin 0 20px
      border-bottom 2px solid color-brand
      width calc(100% - 40px)
      input
        padding-left 0
        background 0
      div
        right -10px
  ul
    padding 0
    margin 0
    list-style-type none
    overflow-x hidden
    &.travel
      transition all .4s ease-in

  qs-button
    position fixed
    background-color color-brand
    border-radius 20px
    color #fff
    width 133px
    height 40px
    bottom 72px
    right 8px
    cursor pointer
    font-size 15px
    display flex
    justify-content center
    align-items center
    bar-icon
      max-width 21px
      margin-right 8px
  qs-shader
    display flex
    position fixed
    z-index 1
    top 0
    left 0
    width 100vw
    height 100vh
    background rgba(color-bg-grey, .8)
    flex-direction column
    justify-content center
  qs-indicator
    background-color color-brand
    border-radius 28px
    color white
    width calc(100% - 16px)
    height 56px
    display flex
    justify-content center
    align-items center
    margin 24px auto 0
    padding-left 12px
    font 300 22px 'Work Sans'
    div
      flex 10
      text-align center
    bar-icon
      min-width 56px
  quick-stack
    display flex
    flex-direction column
    background #fff
    height 344px
    border-radius 2px
    box-shadow 0 2px 4px 0 rgba(0, 0, 0, .12)
    margin 0 8px
    overflow-x hidden
    message-bubble
      .white
        background-color transparent
      flex 1
      padding-left 44px
      .foot, .cap
        display none
      &.mine
        & > div
          float none
          margin-left auto
    topbar
      display flex
      margin 12px 12px 0
      div
        display flex
        font 300 22px 'Work Sans'
        align-items center
        margin-left 12px
    bar
      margin-bottom 0
      display flex
      justify-content center
