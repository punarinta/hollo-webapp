messages-page
  width 100vw
  // height calc(100vh - 56px)
  background-color color-bg-grey
  display block
  ul
    list-style-type none
    padding 5px
    height calc(100vh - 56px)
    margin 56px 0
  snackbar
    position fixed
    top 0
    width 100%
    height 56px
    background-color #fff
    z-index 10
    display flex
    align-items center
    div
      color color-brand
      font-weight 300
      font-size 27px
      flex-grow 4
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
    bar-icon
      height 56px
      max-width 40px
      min-width 40px
  composer
    position fixed
    bottom 0
    height 64px
    textarea
      border 0
      border-top 1px solid color-bg-grey
      margin 0
      position fixed
      left 0
      bottom 0
      max-height 30vh
      font 15px Roboto
      width 100%
      height 64px
      transition height 0.4s
      padding 20px 40px 20px 20px
      font-size 18px
      resize none
      &::-webkit-input-placeholder
        font-style italic
        font-family 'Work Sans', sans-serif
        font-weight 300
      &::-moz-placeholder
        font-style italic
        font-family 'Work Sans', sans-serif
        font-weight 300