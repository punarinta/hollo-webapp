messages-page
  width 100vw
  height 100vh
  display flex
  position fixed
  flex-direction column
  background-color color-bg-grey
  @media screen and (min-width break-tablet)
    left 360px
    width calc(100vw - 360px)
  & > ul
    list-style-type none
    padding 5px
    overflow-y auto
    margin 0
    overflow-scrolling touch
    &.with-filter
      padding-top 72px
  snackbar
    z-index inherit
    width 100%
    height 56px
    min-height 56px
    background-color #fff
    display flex
    align-items center
    border-bottom 1px solid color-bg-grey
    div
      @extend $font-clickable-large
      flex-grow 4
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      &.toggled
        border-radius 2px
        background-color color-bg-grey
    bar-icon
      height 56px
      max-width 40px
      min-width 40px
      &.toggled
        svg
          border-radius 50%
          background-color color-bg-grey
    @media screen and (min-width break-tablet)
      .name
        margin-left 16px
  .list-hint
     height calc(100vh - 131px)

  composer
    margin-top auto
    background #fff
    @media screen and (min-width break-tablet)
      width calc(100% - 32px)
      max-width 560px
      margin auto margin-large margin-large calc(100vw - 936px)
      border-radius 24px 24px 8px 24px
      bar-icon
        cursor pointer
      .uploader
        margin-right margin-large
        cursor pointer
      .btn-send
        right 16px
        bottom 16px
    @media screen and (min-width break-tablet) and (max-width 936px)
      margin-left 16px
    bar
      height 40px
      display flex
      .subj
        flex-grow 4
        border 0
        color color-brand
        font 15px 'Work Sans'
      bar-icon
        min-width 40px
        max-width 40px
    & > bar-icon
      position fixed
      right 0
      bottom 0
      height 64px
    textarea
      border 0
      border-top 1px solid color-bg-grey
      max-height 30vh
      font 15px Roboto
      width 100%
      transition height 0.4s
      padding 20px 40px 20px 20px
      font-size 18px
      resize none
      @media screen and (min-width break-tablet)
        border-radius 24px
        border-top 0                    //  the border looks poor on iPad
      &::-webkit-input-placeholder
        font-style italic
        font-family 'Work Sans', sans-serif
        font-weight 300
      &::-moz-placeholder
        font-style italic
        font-family 'Work Sans', sans-serif
        font-weight 300
    .files
      display flex
      white-space nowrap
      padding 0 2px
      file-plate
        margin 3px 2px
    .uploader
      opacity 0
      position fixed
      right 0
      height 40px
      width 40px
  emojis
    position fixed
    right 5px
    font-size 48px
    div
      display flex
    emoji
      color color-brand
      cursor pointer
      display inline-block
      margin-left auto
