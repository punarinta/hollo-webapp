#page-loader
	background color-brand
	display flex
	justify-content center
	align-items center
	height 100vh
	flex-direction column

#mbox
	top 0
	display none
	z-index 100
	width 100vw
	height 100vh
	background rgba(0,1,247,0.7)
	position fixed
	& > div
		background #fff
		display flex
		flex-direction column
		margin 5% auto
		width 90%
		align-self center
		max-width 480px
	.body
		padding 20px
		font-size 16px
	.foot
		border-top 1px solid #ddd
		display flex
	input[type="text"]
		width calc(100% - 16px)
	button
		display none
		margin 15px auto

#demo
	top 0
	display none
	z-index 100
	width 100vw
	height 100vh
	background rgba(0,1,247,0.7)
	position fixed
	& > div
		display flex
		flex-direction column
		width 100%
		align-self center
	.img
		width 100%
		background-size contain !important
		height 50vh
		text-transform uppercase
		justify-content center
		align-items center
		color #fff
		font-size 64px
		display flex
	.head
		display flex
		justify-content flex-end
		margin 5px
	.close
		background url("/gfx/white/close.svg") no-repeat
		width 20px
		height 20px
		cursor pointer
	.bar
		height 10vmin
		position fixed
		width 100%
		top calc(100vh - 50vw - 2px)
		display none
	.delete
		background url("/gfx/white/delete.svg") no-repeat center
		width 10vmin
		height 100%
		float right
		cursor pointer
		margin-left auto
	.name
		color #fff
		display flex
		justify-content left
		align-items center
		margin-left 10px

@keyframes sk-strechdelay
	0%, 40%, 100%
		transform scaleY(0.4)
	20%
		transform scaleY(1)
