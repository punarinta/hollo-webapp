// Breakpoints
break-tablet = 768px
break-desktop = 1280px

// Some core variables
color-font-standard = rgba(0,0,0,0.87)
color-font-hint = rgba(0,0,0,0.54)
color-brand = #7a4df9
color-bg-grey = #f5f5f5

// If 13 is baseline (set in html)
font-size-xsmall = 1rem // 13px
font-size-small = 1.154rem // 15px
font-size-medium = 1.538rem // 20px
font-size-large = 1.846rem // 24px
font-size-xlarge = 2.077rem // 27px

// Distances
margin-tiny = 4px
margin-small = 8px
margin-medium = 12px
margin-large = 16px
margin-xlarge = 24px

// Font styles, @extend theese
$font-bread // This is a placeholder selector, wont be generated in the css but can be extended
	font-family 'Roboto', sans-serif
	font-size font-size-small
	line-height font-size-medium
	color color-font-standard

$font-clickable
	font-family 'Work Sans', sans-serif
	font-size font-size-small
	font-weight 400
	color color-brand

$font-clickable-bold
	font-family 'Work Sans', sans-serif
	font-size font-size-small
	font-weight 500
	color color-brand

$font-heading
	font-family 'Work Sans', sans-serif
	font-size font-size-large
	font-weight 300
	color color-font-standard

// Font setup
@font-face
	font-family 'Roboto'
	font-style normal
	font-weight 400
	src local('Roboto'), url('/gfx/Roboto-Regular.woff') format('woff')

@font-face
	font-family 'Work Sans'
	font-style normal
	font-weight 300
	src local('Work Sans Light'), url('/gfx/WorkSans-Light.woff') format('woff')

@font-face
	font-family 'Work Sans'
	font-style normal
	font-weight 400
	src local('Work Sans'), url('/gfx/WorkSans-Regular.woff') format('woff')

@font-face
	font-family 'Work Sans'
	font-style normal
	font-weight 500
	src local('Work Sans Medium'), url('/gfx/WorkSans-Medium.woff') format('woff')

@font-face
	font-family 'Work Sans'
	font-style normal
	font-weight 600
	src local('Work Sans SemiBold'), url('/gfx/WorkSans-SemiBold.woff') format('woff')

/* latin-ext */
@font-face
	font-family 'Work Sans'
	font-style normal
	font-weight 300
	src local('Work Sans Light'), url('/gfx/WorkSansExt-Light.woff') format('woff')
	unicode-range U+0100-024F, U+1E00-1EFF, U+20A0-20AB, U+20AD-20CF, U+2C60-2C7F, U+A720-A7FF

/* cyr */
@font-face
	font-family 'Work Sans'
	font-style normal
	font-weight 300
	src local('Work Sans Light'), url('/gfx/OpenSansCyr-Light.woff') format('woff')
	unicode-range U+0400-045F, U+0490-0491, U+04B0-04B1, U+2116


*
	box-sizing border-box

html
	font-size 13px
	@media screen and (min-width break-desktop)
		font-size 11px

body
	font-family 'Work Sans', sans-serif
	color color-font-standard
	padding 0
	margin 0
	background-color #fff
	&::-webkit-scrollbar
		display none


button
	margin 5px auto
	padding 7px 15px 6px
	cursor pointer
	background #fff
	border 0 color-brand solid
	color color-brand
	border-radius 3px
	min-width 64px
	height 36px
	@extend $font-clickable
	&:active
		background-color color-brand
		color #fff

.hidden
	display none !important

.flex
	display flex

.page
	/* ES6 display none*/
	display block
	padding 5px

*
	outline 0
	tap-highlight-color rgba(0,0,0,0)

.texty
	border 0
	border-bottom 1px solid color-brand
	padding 5px 8px
	height 32px
	width 100%
	font-size 16px

.spinner1
	margin 80px auto 30px
	width 50px
	height 40px
	text-align center
	font-size 10px
	& > div
		background-color #fff
		height 100%
		width 6px
		display inline-block
		animation ldStretchDelay 1.2s infinite ease-in-out
	.rect2
		animation-delay -1.1s
	.rect3
		animation-delay -1s
	.rect4
		animation-delay -0.9s
	.rect5
		animation-delay -0.8s

.hollo-loader-small
	float left
	position relative
	top 50%
	left 50%
	transform translate(-50%, -50%)
	span
		float left
		display block
		height 6px
		width 20px
		border-radius 8px
		margin 8px -2px 0
		background-color color-brand
		animation-mixin(load-anim-small)
		animation-iteration-count infinite
		animation-direction alternate
		&:nth-of-type(odd)
			animation-mixin(load-anim-small2)
			animation-iteration-count infinite
			animation-direction alternate
		&:first-of-type
			border-radius 0 8px 8px 0
			margin-left 0
		&:last-of-type
			border-radius 8px 0 0 8px
			margin-right 0

hollo-loader-big
	@extend .hollo-loader-small
	margin-top 20px
	transform none
	float none
	top auto
	left auto
	span
		height 10px
		width 24px
		margin 0 -4px
		background-color #fff
		animation(load-anim-big)
		&:nth-of-type(odd)
			animation(load-anim-big2)

.onoff
	input
		display none
		&:checked
			& + label
				background-color color-brand
				&:before
					right 0
	label
		display block
		overflow hidden
		cursor pointer
		height 38px
		padding 0
		line-height 36px
		border 1px solid color-brand
		border-radius 36px
		background-color #fff
		transition background-color .3s ease-in
		&:before
			content ""
			display block
			width 36px
			height 36px
			margin -1px 9px 0 -1px
			background #fff
			position absolute
			border 1px solid color-brand
			border-radius 36px
