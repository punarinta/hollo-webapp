body {font-family: 'Work Sans', sans-serif; padding: 0; margin: 0; background-color: #fff}
body::-webkit-scrollbar {display: none}
button
{
    margin: 5px auto; padding: 7px 15px 6px; cursor: pointer; font-size: 16px; background: #fff;
    border: 1px #0001f7 solid; color: #0001f7; border-radius: 3px; min-width: 64px; height:36px
}
button:active {background-color: #0001f7; color: #fff}

.page {display: none; padding: 5px}
* {outline:0}

*
{
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    -moz-tap-highlight-color: rgba(0, 0, 0, 0);
}

.file-icon
{
    height: 72px; width: 72px; border-radius: 2px; background-size: cover !important; text-transform: uppercase;
    font: 15px sans-serif; display:flex;justify-content:center;align-items:center; cursor: pointer; color: #fff;
}

.texty {border: 1px solid #0001f7; padding: 5px 8px; height: 26px; font-size: 16px}

.spinner {
    margin: 80px auto 30px;
    width: 50px;
    height: 40px;
    text-align: center;
    font-size: 10px;
}

.spinner > div {
    background-color: #fff;
    height: 100%;
    width: 6px;
    display: inline-block;

    -webkit-animation: sk-stretchdelay 1.2s infinite ease-in-out;
    animation: sk-stretchdelay 1.2s infinite ease-in-out;
}

.spinner .rect2 {
    -webkit-animation-delay: -1.1s;
    animation-delay: -1.1s;
}

.spinner .rect3 {
    -webkit-animation-delay: -1.0s;
    animation-delay: -1.0s;
}

.spinner .rect4 {
    -webkit-animation-delay: -0.9s;
    animation-delay: -0.9s;
}

.spinner .rect5 {
    -webkit-animation-delay: -0.8s;
    animation-delay: -0.8s;
}

@-webkit-keyframes sk-stretchdelay {
    0%, 40%, 100% { -webkit-transform: scaleY(0.4) }
    20% { -webkit-transform: scaleY(1.0) }
}

@keyframes sk-stretchdelay {
    0%, 40%, 100% {
        transform: scaleY(0.4);
        -webkit-transform: scaleY(0.4);
    } 20% {
          transform: scaleY(1.0);
          -webkit-transform: scaleY(1.0);
      }
}

.onoff { position: relative; width: 64px; -webkit-user-select:none; -moz-user-select:none; -ms-user-select: none; cursor: pointer }
.onoff input { display: none }
.onoff label
{
    display: block; overflow: hidden; cursor: pointer;
    height: 36px; padding: 0; line-height: 36px;
    border: 1px solid #0001f7; border-radius: 36px;
    background-color: #fff;
    transition: background-color .3s ease-in;
}
.onoff label:before
{
    content: "";
    display: block; width: 36px; margin: 0;
    background: #fff;
    position: absolute; top: 0; bottom: 0;
    right: 26px;
    border: 1px solid #0001f7; border-radius: 36px;
    transition: all .3s ease-in 0s;
}
.onoff input:checked + label { background-color: #0001f7 }
/*.onoff input:checked + label, .onoff input:checked + label:before { border-color: #0001f7 }*/
.onoff input:checked + label:before { right: 0 }




