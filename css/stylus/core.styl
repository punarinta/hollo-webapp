// Breakpoints
break-tablet = 768px
break-desktop = 1280px

// Some core variables
color-font-standard = rgba(0,0,0,0.87)
color-font-hint = rgba(0,0,0,0.54)
color-brand = #7a4df9
color-bg-grey = #f5f5f5

// If 13 is baseline (set in html)
font-size-xsmall = 1rem // 13px
font-size-small = 1.077rem // 14px
font-size-medium = 1.16rem // 15px
font-size-large = 1.539rem // 20px
font-size-xlarge = 1.847rem // 24px

// Distances
margin-tiny = 4px
margin-small = 8px
margin-medium = 12px
margin-large = 16px
margin-xlarge = 24px

// Font styles, @extend theese
$aa-text
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

$font-heading
  font-family 'Work Sans', sans-serif
  font-size font-size-large
  line-height 1.846rem // 24px
  font-weight 300
  color color-font-standard
  @extend $aa-text

$font-bread // This is a placeholder selector, wont be generated in the css but can be extended
  font-family 'Roboto', sans-serif
  font-size font-size-small
  line-height 1.539rem // 20px
  font-weight 400
  color color-font-standard
  @extend $aa-text

$font-bread-2 // This is a version of bread
  @extend $font-bread
  color color-font-hint

$font-hint
  font-family 'Work Sans', sans-serif
  font-size font-size-xsmall
  line-height 1.231rem// 16px
  color color-font-hint
  font-weight 400
  @extend $aa-text

$font-clickable
  font-family 'Work Sans', sans-serif
  font-size font-size-medium
  line-height 2.462rem // 32px
  font-weight 400
  color color-brand
  @extend $aa-text

$font-clickable-large
  @extend $font-clickable
  font-size font-size-xlarge
  font-weight 300

$font-clickable-white
  @extend $font-clickable
  color #ffffff


// Font setup
@font-face
  font-family 'Roboto'
  font-style normal
  font-weight 400
  src local('Roboto'), url('/gfx/Roboto-Regular.woff') format('woff')

@font-face
  font-family 'Work Sans'
  font-style normal
  font-weight 300
  src local('Work Sans Light'), url('/gfx/WorkSans-Light.woff') format('woff')

@font-face
  font-family 'Work Sans'
  font-style normal
  font-weight 400
  src local('Work Sans'), url('/gfx/WorkSans-Regular.woff') format('woff')

@font-face
  font-family 'Work Sans'
  font-style normal
  font-weight 500
  src local('Work Sans Medium'), url('/gfx/WorkSans-Medium.woff') format('woff')

@font-face
  font-family 'Work Sans'
  font-style normal
  font-weight 600
  src local('Work Sans SemiBold'), url('/gfx/WorkSans-SemiBold.woff') format('woff')

/* latin-ext */
@font-face
  font-family 'Work Sans'
  font-style normal
  font-weight 300
  src local('Work Sans Light'), url('/gfx/WorkSansExt-Light.woff') format('woff')
  unicode-range U+0100-024F, U+1E00-1EFF, U+20A0-20AB, U+20AD-20CF, U+2C60-2C7F, U+A720-A7FF

/* cyr */
@font-face
  font-family 'Work Sans'
  font-style normal
  font-weight 300
  src local('Work Sans Light'), url('/gfx/OpenSansCyr-Light.woff') format('woff')
  unicode-range U+0400-045F, U+0490-0491, U+04B0-04B1, U+2116


*
  box-sizing border-box
  outline 0
  -webkit-tap-highlight-color rgba(0,0,0,0)  // WebKit only

html
  font-size 13px
  @media screen and (min-width break-desktop)
    font-size 11px

body
  font-family 'Work Sans', sans-serif
  color color-font-standard
  padding 0
  margin 0
  background-color #fff
  &::-webkit-scrollbar
    display none

a
  color color-brand

button
  margin 5px auto
  padding 7px 15px 6px
  cursor pointer
  background #fff
  border 0 color-brand solid
  color color-brand
  border-radius 3px
  min-width 64px
  line-height 36px
  @extend $font-clickable
  &:active
    background-color color-brand
    color #fff

