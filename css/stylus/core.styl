.hollo-loader-small
  float left
  position relative
  top 50%
  left 50%
  transform translate(-50%, -50%)
  span
    float left
    display block
    height 6px
    width 20px
    border-radius 8px
    margin 8px -2px 0
    background-color color-brand
    animation-mixin(load-anim-small)
    animation-iteration-count infinite
    animation-direction alternate
    &:nth-of-type(odd)
      animation-mixin(load-anim-small2)
      animation-iteration-count infinite
      animation-direction alternate
    &:first-of-type
      border-radius 0 8px 8px 0
      margin-left 0
    &:last-of-type
      border-radius 8px 0 0 8px
      margin-right 0

hollo-loader-big
  @extend .hollo-loader-small
  margin-top 20px
  transform none
  float none
  top auto
  left auto
  span
    height 10px
    width 24px
    margin 0 -4px
    background-color #fff
    animation(load-anim-big)
    &:nth-of-type(odd)
      animation(load-anim-big2)

.opa-85
  opacity 0.85

.list-hint
  display flex
  justify-content center
  align-items center
  text-align center
  height 100vh
  line-height 20px
  color rgba(0, 0, 0, .4)
  font-size 15px

app-loader
  background color-brand
  display flex
  justify-content center
  align-items center
  height 100vh
  flex-direction column
