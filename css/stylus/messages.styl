#page-msgs
  padding-top 61px
  font-family 'Roboto', sans-serif
  min-height calc(100vh - 100px)
  background #f5f5f5
  &.filtered
    padding-top 130px
  ul
    list-style-type none
    padding 0 0 50px 0
    margin 0
    width calc(100vw - 10px)
    li
      overflow auto
      width calc(100vw - 10px)
      & > div
        overflow auto
        margin 5px 3px
        min-width 200px
        max-width 100%
      .white
        background-color #fff
        padding 10px 12px 2px
        border-radius 3px
      .msg
        display inline-block
        word-break break-all
        @extend $font-bread
      .cap
        color color-brand
        cursor pointer
        font 15px 'Work Sans'
        background url("/gfx/color/subj.svg") no-repeat 1px
        padding-left 24px
      .files
        display flex
        margin-top 10px
        & > div
          margin-right 3px
          &.full
            width 80vw
            height 50vw
      .foot
        .ts
          float right
          margin 6px 25px 0
          font-size 10px
          color rgba(0,0,0,0.3)
          font-family Roboto
        .ava
          float right
          position relative
          width 32px
          height 32px
          border-radius 50%
          top -9px
          left -16px
          display flex
          justify-content center
          align-items center
          color #fff
          font 15px sans-serif
      &.yours
        .foot
          .ava
            float left
            left 16px
          .ts
            float left
            margin-right 25px
        & > div
          float left
          margin-right 15px
      &.mine
        .foot
          .ava
            &.full
              background-size cover !important
        & > div
          float right
          margin-left 15px

#composer
  height 60px
  .emojis
    position fixed
    right 5px
    font-size 48px
    .emoji
      color color-brand
      cursor pointer
      display inline-block
  textarea
    border 0
    border-top 1px solid #ddd
    margin 0
    position fixed
    left 0
    bottom 0
    max-height 30vh
    font 15px Roboto
    width calc(100vw - 60px)
    height 40px
    transition height 0.4s
    padding 20px 60px 0 20px
    font-size 18px
    &::-webkit-input-placeholder
      font-style italic
      font-family 'Work Sans', sans-serif
      font-weight 300
    &::-moz-placeholder
      font-style italic
      font-family 'Work Sans', sans-serif
      font-weight 300
  .head
    display none
    height 40px
    position fixed
    bottom 61px
    left 0
    background #fff
    width 100%
    border-top 1px solid #ddd
    color color-brand
    flex-wrap nowrap
    & > *
      height 40px
    .icon
      background url("/gfx/color/subj.svg") no-repeat 13px 12px
      width 39px
    .cap
      font 15px 'Work Sans'
      flex 4 1 0
      display flex
      border 0
      color color-brand
    .picker
      background url("/gfx/color/updown.svg") no-repeat 15px 11px
    .files
      background url("/gfx/color/clip.svg") no-repeat 9px 14px
  .send
    background url("/gfx/color/send.svg") no-repeat
    width 21px
    height 18px
    position fixed
    right 12px
    bottom 19px
    z-index 1
    cursor pointer
    display none
  .subjects
    display block
    transition-mixin(transform)
    transform translateY(150%)
    pointer-events none
    position fixed
    left 0
    bottom 102px
    background #fff
    width 100%
    font 15px 'Work Sans'
    color color-brand
    margin 0
    border-top 1px solid #ddd
    padding 0
    li
      padding 12px 10px 12px 39px
      cursor pointer
      &.add
        background url("/gfx/color/plus2.svg") no-repeat 14px 15px
  &.focused
    .head
      display flex
    .send
      display block
    .subjects
      &.opened
        pointer-events all
        transform translateY(0)

#composer .head .picker,
#composer .head .files
  width 40px
  max-width 40px
  flex 1 1 0
  cursor pointer

#upload
  opacity 0
  cursor pointer
  line-height 40px

#uploaded
  position fixed
  left 4px
  bottom 0
  width 100vw
  background #fff
  white-space nowrap
  display flex
  div
    margin 3px 2px