chat-row-height = 72px

chat-row
  overflow hidden
  height chat-row-height
  white-space nowrap
  display flex
  transition height .8s ease-in, opacity .8s ease-in
  cursor pointer
  align-items center
  position relative

  will-change transform
  transform translateZ(0)
  backface-visibility hidden

  @media screen and (min-width break-tablet)
    &:hover
      .real
        background-color darken(#fff, 4%)
  avatar
    margin margin-large margin-medium margin-large margin-large
    line-height @height
  & > div
    display flex
    background color-bg-grey
    width 100%
    @media screen and (min-width break-tablet)
      background #fff
    &.travel
      transition all .4s ease-in
  .name
    @extend $font-heading
    margin-bottom 2px
    overflow hidden
    text-overflow ellipsis
    width calc(100vw - 90px)
    font-weight 400
    font-size 18px
    @media screen and (min-width break-tablet)
      width calc(360px - 90px)
    &:first-letter
      text-transform capitalize
  .email
    overflow hidden
    text-overflow ellipsis
    width calc(100vw - 90px)
    color #808080
    @extend $font-bread-2
    @media screen and (min-width break-tablet)
      width calc(360px - 90px)
  .info
    padding-top 14px
  .real
    height chat-row-height
  .shadow
    height chat-row-height
    display none
    width 100%
    background color-brand
    color #fff
    @media screen and (min-width break-tablet)
      background #fff
      color color-brand
    div
      display flex
      justify-content center
      align-items center
      height 100%
      width 80px
      text-align center
      text-transform lowercase
      &:first-child
        float left
      &:last-child
        float right
        margin-right 12px
