menu-modal
  position fixed
  display block
  z-index 10
  right 3px
  top 62px
  background-color #fff
  border 2px solid color-bg-grey
  &:before
    right 5px
    border-color transparent transparent #fff transparent
    content ''
    position absolute
    top -10px
    width 0
    height 0
    border-style solid
    border-width 0 10px 10px
    z-index 10
  ul
    list-style-type none
    padding 2px 0
    margin 0
    li
      padding 10px 14px
      cursor pointer
      font-size 15px

.menu-files
  &:before
    right 45px
  ul
    display flex
    flex-wrap wrap
    overflow auto
    max-height calc(100vh - 76px)
    justify-content center
    li
      padding 0
      bar-icon
        height 38px
        margin-bottom 10px
  file-plate
    margin 2px
    font-size 32px

.menu-subjects
  &:before
    right 85px

.menu-users
  right initial
  &:before
    left 41px