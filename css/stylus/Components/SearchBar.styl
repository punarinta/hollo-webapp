search-bar
  display block
  height 56px
  min-height 56px
  input
    height 56px
    border 0
    width 100%
    background url('gfx/color/search.svg') no-repeat 15px 17px
    color color-brand
    font 14px 'Roboto', sans-serif
    padding 0 0 0 56px
    &::-webkit-input-placeholder
      font 15px 'Work Sans', sans-serif
  div
    width 48px
    height 48px
    position relative
    top -53px
    right 5px
    cursor pointer
    float right
    justify-content center
    align-items center
