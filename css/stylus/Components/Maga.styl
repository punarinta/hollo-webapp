maga
  margin 8px
  background #fff
  display block
  color rgba(0, 0, 0, .87)
  header
    height 32px
    width 100%
    display flex
    align-items center
    img
      width 16px
      height 16px
      margin 8px
    name
      font-size 14px
  thumbnail
    width 100%
    height 176px
    background-position center center
    background-size cover
    background-repeat no-repeat
    display block
  footer
    padding 8px 16px
    width 100%
    caption
      font-size 20px
      font-weight 500
      white-space nowrap
      overflow hidden
      text-overflow ellipsis
      display block
      text-align left
    ts
      font-size 10px
      opacity .3